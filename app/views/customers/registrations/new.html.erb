  <h2>新規会員登録</h2>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
    
    　 <div class="field">
        <%= f.label :名前 %>
        (姓）<%= f.text_field :first_name, autofocus: true %> (名)<%= f.text_field :last_name, autofocus: true %></span>
      </div>
    
      <div class= "field">
        <%= f.label :フリガナ %>
        (セイ)<%= f.text_field :first_name_kana, autofocus: true %>（メイ）<%= f.text_field :last_name_kana, autofocus: true %>
        </span>
      </div>
    
      <div class="field">
        <%= f.label :メールアドレス %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    
      <div class="field">
        <%= f.label :郵便番号（ハイフン無し） %>
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
      </div>
    
      <div class="field">
        <%= f.label :住所 %>
        <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
      </div>
    
      <div class="field">
        <%= f.label :電話番号 %>
        <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
      </div>
    
      <div class="field">
        <%= f.label :パスワード（６文字以上） %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
    
      <div class="field">
        <%= f.label :パスワード（確認用） %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    
      <div class="actions">
        <%= f.submit "新規登録" %>
      </div>
    <% end %>
    
    <h4>既にご登録済みの方</h4>
    <p><%= link_to "こちら", new_customer_session_path %>からログインして下さい。</p>